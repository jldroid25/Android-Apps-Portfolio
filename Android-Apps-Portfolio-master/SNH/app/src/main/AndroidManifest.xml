<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nevictus.android.coolmix">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_southern_nh_app_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_southern_nh_app_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- I purposely left the activities' label empty below-->
        <activity
            android:name=".BedfordNH"
            android:label=""
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ManchesterNH"
            android:label=""
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".HooksettNH"
            android:label=""
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MerrimackNH"
            android:label=""
            android:parentActivityName=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".SnhMuseumCategoryActivity" />
        <activity android:name=".SnhSportsCategoryActivity" />
        <activity android:name=".SnhPerformingArtsCategoryActivity" />
        <activity android:name=".SnhPublicLibraryCategoryActivity" />
        <activity android:name=".SnhDiningCategoryActivity" />
        <activity android:name=".SnhShoppingCategoryActivity" />
        <activity android:name=".SnhWalkingCategoryActivity" />
        <activity android:name=".SnhParksCategoryActivity" />
        <activity android:name=".SnhHotelsCategoryActivity" />
        <activity android:name=".SnhAirportCategoryActivity" />
    </application>

</manifest>