<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/list_item_margin_left"
    android:layout_marginTop="@dimen/list_item_margin_top"
    android:background="@color/colorSecondary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="@dimen/list_item_margin_left"
        android:layout_marginTop="@dimen/list_item_margin_top"
        android:contentDescription="@string/city_img_desc"
        android:fontFamily="@font/roboto_medium"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/brown_txt"
        android:textSize="@dimen/data_item_txtviewtitle_txtsize"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/cityImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_imgview_layoutheight"
        android:layout_margin="@dimen/list_item_layoutmargin"
        android:layout_marginLeft="@dimen/list_item_margin_left"
        android:layout_marginTop="@dimen/list_item_img_margin_top"
        android:contentDescription="@string/city_img_desc"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/city_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_margin_left"
        android:layout_marginTop="@dimen/list_item_desc_margin_top"
        android:contentDescription="@string/city_description"
        android:fontFamily="@font/roboto_thin"
        android:paddingLeft="@dimen/data_item_imgview_padding_left"
        android:paddingRight="@dimen/list_item_imgview_padding_right"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="@dimen/data_item_txtview_txtsize_desc"
        android:typeface="sans" />
</LinearLayout>